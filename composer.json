{
    "name": "mybb/mybb",
    "description": "MyBB is a free and open source, community-based forum software project.",
    "type": "project",
    "keywords": [
        "forum",
        "community"
    ],
    "homepage": "https://mybb.com",
    "license": "LGPL-3.0-only",
    "authors": [
        {
            "name": "MyBB Group",
            "email": "contact@mybb.com"
        }
    ],
    "support": {
        "forum": "https://community.mybb.com",
        "docs": "https://docs.mybb.com",
        "source": "https://github.com/mybb/mybb",
        "issues": "https://github.com/mybb/mybb/issues"
    },
    "require": {
        "php": "^7.1",
        "illuminate/config": "5.7.*",
        "illuminate/container": "5.7.*",
        "illuminate/events": "5.7.*",
        "illuminate/hashing": "5.7.*",
        "illuminate/routing": "5.7.*",
        "twig/twig": "^2.4"
    },
    "require-dev": {
        "mockery/mockery": "^1.2",
        "phpspec/phpspec": "^5.1",
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "^3.4",
        "phpstan/phpstan": "0.11.12"
    },
    "autoload": {
        "psr-4": {
            "MyBB\\": "inc/src/"
        },
        "files": [
            "inc/src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "MyBB\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "vendor-dir": "inc/vendor",
        "bin-dir": "inc/vendor/bin",
        "optimize-autoloader": true,
        "sort-packages": true
    }
}, 

{
    "scripts": {
        "phpstan": "phpstan analyse src/ -c inc/src/phpstan.neon --level=0 --no-progress -vvv",
        "phpstan": "phpstan analyse src/ -c inc/src/phpstan.neon --level=1 --no-progress -vvv",
        "phpstan": "phpstan analyse src/ -c inc/src/phpstan.neon --level=2 --no-progress -vvv",
        "phpstan": "phpstan analyse src/ -c inc/src/phpstan.neon --level=3 --no-progress -vvv",
        "phpstan": "phpstan analyse src/ -c inc/src/phpstan.neon --level=4 --no-progress -vvv",
        "phpstan": "phpstan analyse src/ -c inc/src/phpstan.neon --level=5 --no-progress -vvv",
        "phpstan": "phpstan analyse src/ -c inc/src/phpstan.neon --level=6 --no-progress -vvv",
        "phpstan": "phpstan analyse src/ -c inc/src/phpstan.neon --level=7 --no-progress -vvv"
    }
}
