{% extends 'layouts/master.twig' %}

{% block head %}
    <title>{{ mybb.settings.bbname }} - {{ lang.confirm_execute_tool }}</title>
{% endblock head %}

{% block body %}
    <form action="moderation.php" method="post">
        <input type="hidden" name="my_post_key" value="{{ mybb.post_code }}" />
        <input type="hidden" name="action" value="{{ confirm.action }}" />
        <input type="hidden" name="modtype" value="{{ confirm.modtype }}" />
        <input type="hidden" name="tid" value="{{ confirm.tid }}" />
        <input type="hidden" name="pid" value="{{ confirm.pid }}" />
        <input type="hidden" name="fid" value="{{ confirm.fid }}" />
        <input type="hidden" name="confirm" value="1" />
        <input type="hidden" name="inlinetype" value="{{ confirm.inlinetype }}" />
        <input type="hidden" name="searchid" value="{{ confirm.searchid }}" />
        <input type="hidden" name="url" value="{{ confirm.url }}" />
        <table border="0" cellspacing="{{ theme.borderwidth }}" cellpadding="{{ theme.tablespace }}" class="tborder">
            <tr>
                <td class="thead" colspan="2"><strong>{{ confirm.subject }} - {{ lang.confirm_execute_tool }}</strong></td>
            </tr>
            <tr>
                <td class="trow1" colspan="2" align="center">{{ lang.confirm_execute_tool_desc|raw }}</td>
            </tr>
            {{ loginbox|raw }}
        </table>
        <br />
        <div align="center"><input type="submit" class="button" name="submit" value="{{ lang.confirm_execute_tool }}" /></div>
    </form>
{% endblock body %}
