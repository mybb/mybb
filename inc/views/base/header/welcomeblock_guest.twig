<ul class="user-bar__links">
	<li class="user-bar__item user-bar__item--sign-up">
		<a href="{{ mybb.settings.bburl }}/member.php?action=register" class="user-bar__link"><i class="user-bar__icon fas fa-user"></i> {{ lang.welcome_register }}</a>
	</li>
	<li class="user-bar__item user-bar__item--log-in">
		<a href="{{ mybb.settings.bburl }}/member.php?action=login" class="user-bar__link" onclick="$('#quick_login').modal({ fadeDuration: 250, keepelement: true, zIndex: (typeof modal_zindex !== 'undefined' ? modal_zindex : 9999) }); return false;"><i class="user-bar__icon fas fa-sign-in-alt"></i> {{ lang.welcome_login }}</a>
	</li>
</ul>
<div class="modal" id="quick_login" style="display: none;">
    <form method="post" action="{{ mybb.settings.bburl }}/member.php">
        <input name="action" type="hidden" value="do_login" />
        <input name="url" type="hidden" value="" />
        <input name="quick_login" type="hidden" value="1" />
		<section class="block block--modal">
			<h2 class="title title--modal">{{ lang.login }}</h2>
			<div class="form form--modal">
				<div class="section section--form">
					<div class="row row--form field">
						<h3 class="field__name"><label for="quick_login_username">
							{% if mybb.settings.username_method == 1 %}
	                            {{ lang.login_username1 }}
	                        {% elseif mybb.settings.username_method == 2 %}
	                            {{ lang.login_username2 }}
	                        {% else %}
	                            {{ lang.login_username }}
	                        {% endif %}
						</label></h3>
						<input name="quick_username" id="quick_login_username" type="text" value="" class="textbox initial_focus" />
					</div>
					<div class="row row--form field">
						<h3 class="field__name"><label for="quick_login_password">{{ lang.password }}</label></h3>
						<p class="field__description"><a href="{{ mybb.settings.bburl }}/member.php?action=lostpw">{{ lang.lost_password }}</a></p>
						<input name="quick_password" id="quick_login_password" type="password" value="" class="textbox" />
					</div>
					<div class="row row--form field">
						<p class="option-field option-field--compact"><label><input name="quick_remember" id="quick_login_remember" type="checkbox" value="yes" class="checkbox" checked="checked" /> {{ lang.remember_me }}</label></p>
					</div>
				</div>
				<div class="form__submit">
					<button type="submit" class="button button--medium">
    					<i class="button__icon fas fa-sign-in-alt"></i>
    					<span class="button__text">{{ lang.login }}</span>
    				</button>
				</div>
            </div>
		</section>
    </form>
</div>
<script type="text/javascript">
    $("#quick_login input[name='url']").val($(location).attr('href'));
</script>
