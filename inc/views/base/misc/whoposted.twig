{% extends 'layouts/master.twig' %}

{% block head %}
    <title>{{ mybb.settings.bbname }} - {{ lang.who_posted }}</title>
{% endblock head %}

{% block body %}
    <table border="0" cellspacing="{{ theme.borderwidth }}" cellpadding="{{ theme.tablespace }}" class="tborder">
        <tr>
            <td colspan="2" class="thead"><strong>{{ lang.total_posts }} {{ thread.numposts }}</strong></td>
        </tr>
        <tr>
            <td class="tcat"><span class="smalltext"><strong><a href="{{ mybb.settings.bburl }}/misc.php?action=whoposted&amp;tid={{ thread.tid }}&amp;sort=username">{{ lang.user }}</a></strong></span></td>
            <td class="tcat"><span class="smalltext"><strong><a href="{{ mybb.settings.bburl }}/misc.php?action=whoposted&amp;tid={{ thread.tid }}">{{ lang.num_posts }}</a></strong></span></td>
        </tr>
        {% for poster in whoposted %}
            {% set row = alt_trow() %}
            <tr>
                <td class="{{ row }}">{{ poster.profile_link|raw }}</td>
                <td class="{{ row }}">{{ poster.posts }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock body %}
