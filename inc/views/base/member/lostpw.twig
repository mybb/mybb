{% extends 'layouts/master.twig' %}

{% block head %}
    <title>{{ mybb.settings.bbname }} - {{ lang.lost_pw }}</title>
{% endblock head %}

{% block body %}
    <form action="member.php" method="post">
        <table border="0" cellspacing="{{ theme.borderwidth }}" cellpadding="{{ theme.tablespace }}" class="tborder">
            <tr>
                <td class="thead" colspan="2"><strong>{{ lang.lost_pw_form }}</strong></td>
            </tr>
            <tr>
                <td class="trow1" width="40%"><strong><label for="email">{{ lang.email_address }}</label></strong></td>
                <td class="trow1" width="60%"><input type="text" class="textbox" name="email" id="email" /></td>
            </tr>
        </table>
        <br />
        <div align="center">
            <input type="hidden" name="action" value="do_lostpw" />
            <input type="submit" class="button" value="{{ lang.request_user_pass }}" />
        </div>
    </form>
{% endblock body %}
