{% extends 'layouts/master.twig' %}

{% block head %}
    <title>{{ lang.calendar }} - {{ lang.move_event }} - {{ mybb.settings.bbname }}</title>
{% endblock head %}

{% block body %}
    <div class="page-content">
        <header class="page-header">
            <h1 class="title title--page">{{ lang.move_event }}</h1>
        </header>
        <form action="calendar.php" method="post" name="input">
            <input type="hidden" name="my_post_key" value="{{ mybb.post_code }}" />
            <section class="block block--form form">
                <div class="section section--form">
                    <div class="row row--form field">
                        <h3 class="field__name"><label for="new_calendar">{{ lang.move_to_calendar }}</label></h3>
                        <div class="select-field">
                            {{ include('partials/icon.twig', {icon: 'sort', class: 'select-field__icon'}, with_context = false) }}
                            <select name="new_calendar">
                                {% for calendar in calendar_select %}
                                    <option value="{{ calendar.cid }}">{{ calendar.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form__submit">
                    <button class="button button--medium" type="submit">
                        {{ include('partials/icon.twig', {icon: 'arrow-right', class: 'button__icon'}, with_context = false) }}
                        <span class="button__text">{{ lang.move_event }}</span>
                    </button>
                </div>
            </section>
            <input type="hidden" name="action" value="do_move" />
            <input type="hidden" name="eid" value="{{ event.eid }}" />
        </form>
    </div>
{% endblock body %}
