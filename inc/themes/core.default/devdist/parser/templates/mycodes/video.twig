{% if type == 'dailymotion' %}
    <iframe src="//www.dailymotion.com/embed/video/{{ id }}" frameborder="0" width="480" height="270" allowfullscreen="true"></iframe>
{% elseif type == 'facebook' %}
    <iframe src="https://www.facebook.com/video/embed?video_id={{ id }}" frameborder="0" width="625" height="350"></iframe>
{% elseif type == 'liveleak' %}
    <iframe src="https://www.liveleak.com/ll_embed?i={{ id }}" frameborder="0" width="500" height="300" allowfullscreen="true"></iframe>
{% elseif type == 'metacafe' %}
    <iframe src="http://www.metacafe.com/embed/{{ id }}/" frameborder="0" width="440" height="248" allowfullscreen="true"></iframe>
{% elseif type == 'myspacetv' %}
    <iframe width="480" height="270" src="//media.myspace.com/play/video/{$id}" frameborder="0" allowtransparency="true" allowfullscreen="true"></iframe>
{% elseif type == 'twitch' %}
    <iframe src="https://player.twitch.tv/?{{ id }}&amp;autoplay=false" frameborder="0" scrolling="no" height="378" width="620"></iframe>
{% elseif type == 'mixer' %}
    <iframe allowfullscreen="true" src="https://mixer.com/embed/player/{{ id }}?disableLowLatency=1" width="620" height="349"></iframe>
{% elseif type == 'vimeo' %}
    <iframe src="//player.vimeo.com/video/{$id}" width="500" height="375" frameborder="0" allowfullscreen="true"></iframe>
{% elseif type == 'yahoo' %}
    <iframe src="//{{ local }}screen.yahoo.com/{{ id }}?format=embed" frameborder="0" width="640" height="360" scrolling="no" allowtransparency="true' allowfullscreen="true"></iframe>
{% elseif type == 'youtube' %}
    <iframe src="//www.youtube-nocookie.com/embed/{{ id }}" frameborder="0" width="560" height="315" allowfullscreen="true"></iframe>
{% endif %}
