{% extends 'layouts/master.twig' %}

{% block head %}
    <title>{{ lang.merge_threads }} - {{ mybb.settings.bbname }}</title>
{% endblock head %}

{% block body %}
    <div class="page-content">
        <header class="page-header">
            <h1 class="title title--page">{{ lang.merge_threads }}</h1>
        </header>
        <form action="moderation.php" method="post">
            <input type="hidden" name="my_post_key" value="{{ mybb.post_code }}" />
            <section class="block block--form form">
                <div class="section section--form">
                    <div class="row row--form field">
                        <h3 class="field__name"><label for="new_subject">{{ lang.new_subject }}</label></h3>
                        <input type="text" class="textbox" name="subject" id="new_subject" value="{{ thread.subject }}" size="40" />
                    </div>
                    <div class="row row--form field">
                        <h3 class="field__name"><label for="thread_url">{{ lang.thread_to_merge_with }}</label></h3>
                        <p class="field__description">{{ lang.merge_with_note|raw }}</p>
                        <input type="text" class="textbox" name="threadurl" id="thread_url" size="40" />
                    </div>
                </div>
                <div class="form__submit">
                    <button type="submit" class="button button--medium">
                        {{ include('partials/icon.twig', {icon: 'arrow-alt-circle-right', class: 'button__icon'}, with_context = false) }}
                        <span class="button__text">{{ lang.merge_threads }}</span>
                    </button>
                </div>
            </section>
            <input type="hidden" name="action" value="do_merge" />
            <input type="hidden" name="tid" value="{{ thread.tid }}" />
        </form>
    </div>
{% endblock body %}
