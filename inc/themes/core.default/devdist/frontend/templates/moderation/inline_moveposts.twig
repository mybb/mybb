{% extends 'layouts/master.twig' %}

{% block head %}
    <title>{{ lang.move_posts }} - {{ mybb.settings.bbname }}</title>
{% endblock head %}

{% block body %}
    <div class="page-content">
        <header class="page-header">
            <h1 class="title title--page">{{ lang.move_posts }}</h1>
        </header>
        <form action="moderation.php" method="post">
            <input type="hidden" name="my_post_key" value="{{ mybb.post_code }}" />
            <section class="block block--form form">
                <div class="section section--form">
                    <div class="row row--form field">
                        <h3 class="field__name"><label for="threadurl">{{ lang.thread_to_move_to }}</label></h3>
                        <p class="field__description">{{ lang.move_post_note }}</p>
                        <input type="text" class="textbox" name="threadurl" id="threadurl" size="40" />
                    </div>
                </div>
                <div class="form__submit">
                    <button type="submit" class="button button--medium">
                        {{ include('partials/icon.twig', {icon: 'arrow-right', class: 'button__icon'}, with_context = false) }}
                        <span class="button__text">{{ lang.move_posts }}</span>
                    </button>
                </div>
            </section>
            <input type="hidden" name="action" value="do_multimoveposts" />
            <input type="hidden" name="tid" value="{{ thread.tid }}" />
            <input type="hidden" name="posts" value="{{ inlineids }}" />
            <input type="hidden" name="url" value="{{ return_url }}" />
        </form>
    </div>
{% endblock body %}
