{% extends 'layouts/master.twig' %}

{% block head %}
    <title>{{ lang.delete_thread }} - {{ mybb.settings.bbname }}</title>
{% endblock head %}

{% block body %}
    <div class="page-content">
        <header class="page-header">
            <h1 class="title title--page">{{ thread.subject }} - {{ lang.delete_thread }}</h1>
            <p class="page-description">{{ lang.confirm_delete_threads }}</p>
        </header>
        <form action="moderation.php" method="post">
            <input type="hidden" name="my_post_key" value="{{ mybb.post_code }}" />
            <section class="block block--form form">
                <div class="form__submit">
                    <button type="submit" class="button button--medium">
                        {{ include('partials/icon.twig', {icon: 'trash', class: 'button__icon'}, with_context = false) }}
                        <span class="button__text">{{ lang.delete_thread }}</span>
                    </button>
                </div>
            </section>
            <input type="hidden" name="action" value="do_deletethread" />
            <input type="hidden" name="tid" value="{{ thread.tid }}" />
        </form>
    </div>
{% endblock body %}
